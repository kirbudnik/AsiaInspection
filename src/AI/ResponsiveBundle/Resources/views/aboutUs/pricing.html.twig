{% extends 'AIResponsiveBundle:aboutUs:aboutUsBase.html.twig' %}

{% block title %}{{pageTitle}}{% endblock %}
{% block pagename %}Pricing{% endblock %}
{% block pageDescription %}{% if pageDesc is defined %}{{pageDesc}}{% endif %}{% endblock %}
{% block bigTitle %} {{xml.title}} {% endblock %}
{% block smallText %}{{xml.subtext|raw}}{% endblock %}

{% block aboutUsMainBlock %}
<style type="text/css">
    #pricingAutoSuggestList {
        position:absolute;
        background-color:white;
        border:1px solid black;
        border-top:0px;
        z-index:9999;
        width:100%;
        padding:0px;
        list-style-type:none;
        display:none;
        cursor:pointer;
    }
    #pricingAutoSuggestList > li {
        padding:2px 5px;
    }
    #pricingAutoSuggestList > li:hover {
        background-color:grey;
        color:white;
    }
</style>
<div id="aboutUsPricing">
    <div class="col-xs-11 col-xs-offset-1 col-sm-10 col-sm-offset-1 wrapper paddingLeftZero">
        <br />
        <div id="homePricingBoxWrapper" class="row">

            <div style="margin:0px 10px 15px 20px;">
                <span style="valign:top; font-weight:bold;">View our prices for services in:</span> &nbsp; 
                <div style="display:inline-block; position:relative;">
                    <input id="pricingAutoSuggestInput" placeholder="Type a country" class="form-control" type="text" style="min-width:230px; max-width:83%;" />
                    <ul id="pricingAutoSuggestList">
                        {% for key, country in countries %}
                            <li key="{{key}}">{{country.name}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div><br />

            <div class=" col-xs-12 col-sm-offset-0 col-sm-12 col-md-4 vcenter_parent margin20Small">
                <div class="pricing-offer-box-titlebar">
                    <h5 style="margin:0px; color:white; font-size:17px; text-transform:uppercase;">{{xml.offerbox1.title}}</h5>
                </div>
                <div class="text-center pricing-offer-box pgrey vcenter_parent">
                    <div class="pricingContent vcenter_parent">
                        <div>{% trans %}from{% endtrans %}</div>
                        <h2>$<span id="priceInspect">{{price_Inspect_Low}}</span> {% if app.request.locale == "zh" %}美元起{% else %}USD{% endif %}</h2>
                        {% if xml.manday is defined %}{{xml.manday}}{% else %}{% trans %}Per Man Day{% endtrans %}{% endif %}
                        <br /><br />
                        <a href="http://customer.asiainspection.com/login" role="button"  class="btn btn-primary btn-md" style="width:176px;">{{xml.offerbox1.order}}</a><br/>
                        <hr />
                        <a href="/quality-control-services#inspections">{{xml.offerbox1.learnMore}}</a>
                    </div>
                </div>
            </div>

            <div class=" col-xs-12 col-sm-offset-0 col-sm-12 col-md-4 vcenter_parent margin20Small">
                <div class="pricing-offer-box-titlebar">
                    <h5 style="margin:0px; color:white; font-size:17px; text-transform:uppercase;">{{xml.offerbox2.title}}</h5>
                </div>
                <div class="text-center pricing-offer-box pgrey vcenter_parent">
                    <div class="pricingContent vcenter_parent">
                        <div>{% trans %}from{% endtrans %}</div>
                        <h2>$<span id="priceAudit">{{price_Audit_Low}}</span> {% if app.request.locale == "zh" %}美元起{% else %}USD{% endif %}</h2>
                        {% if xml.manday is defined %}{{xml.manday}}{% else %}{% trans %}Per Man Day{% endtrans %}{% endif %}
                        <br /><br />
                        <a href="http://customer.asiainspection.com/login" role="button"  class="btn btn-primary btn-md" style="width:176px;">{{xml.offerbox2.order}}</a><br/>
                        <hr />
                        <a href="/quality-control-services#audit">{{xml.offerbox2.learnMore}}</a>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-offset-0 col-sm-12 col-md-4 vcenter_parent margin20Small">
                <div class="pricing-offer-box-titlebar">
                    <h5 style="margin:0px; color:white; font-size:17px; text-transform:uppercase;">{{xml.offerbox3.title}}</h5>
                </div>
                <div class="text-center pricing-offer-box pgrey vcenter_parent">
                    <div id="thirdPricingBox" class="pricingContent vcenter_parent">
                        <div class="thirdPricingBoxTopSpacer"></div>
                        <h2>{% trans %}Instant Pricing{% endtrans %}</h2>
                        <!-- <div class="thirdPricingBoxBottomSpacer"></div> -->
                        <br /><br />
                        <a href="http://customer.asiainspection.com/login" role="button"  class="btn btn-primary btn-md" style="width:176px;">{{xml.offerbox3.order}}</a><br/>
                        <hr />
                        <a href="/quality-control-services#labtests">{{xml.offerbox3.learnMore}}</a>
                    </div>
                </div>
            </div>

            <div style="clear:both; display:none;" class="row">
                <div class="col-xs-12">
                    <table border="0" style="margin:10px 0px 0px 15px;">
                        <tr><td style="padding-right:5px;">*</td><td>{% trans %}Pricing_Zone_A{% endtrans %}</td></tr>
                        <tr><td style="padding-right:5px;">**</td><td>{% trans %}Pricing_Zone_B{% endtrans %}</td></tr>
                    </table>
                </div>
            </div>
        </div>


        <div class="row" style="padding-bottom:20px;padding-top:20px;">
            <div class="col-lg-9 col-xs-12" style="margin-top:10px;">

                <h2>{{xml.pricingCover.title1}}</h2>
                {{xml.pricingCover.list1|trans|raw}}

                <br />

                <h2>{{xml.pricingCover.title3}}</h2>
                {{xml.pricingCover.pgph|trans|raw}}

            </div>
            <div id="txtSameDayAudit" class="notshow" style="display:none;">{{xml.hoverOne|raw}}</div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var allRadios = document.getElementsByName('radioButton');
    var booRadio;
    var x = 0;
    for(x = 0; x < allRadios.length; x++){
        allRadios[x].onclick = function() {
            if(booRadio == this){
                this.checked = false;
                booRadio = null;
            }else{
                booRadio = this;
            }
        };
    }

    // Custom Pricing
    prices = {};
    {% for key, country in countries %}
        prices["{{key}}"] = {inspectPrice:"{% if country.inspectPrice is defined %}{{country.inspectPrice}}{% else %}{{price_Inspect_Low}}{% endif %}", auditPrice:"{% if country.auditPrice is defined %}{{country.auditPrice}}{% else %}{{price_Audit_Low}}{% endif %}"};
    {% endfor %}

    $("#pricingAutoSuggestInput").keyup(function(){
        key = $(this).val().toLowerCase();
        items = $("li","#pricingAutoSuggestList");
        $(items).hide();
        $(items).each(function(){
            str = $(this).text().toLowerCase();
            if(str.indexOf(key) >= 0) $(this).show();
        });
        items = $("#pricingAutoSuggestList").show();
    });
    $("#pricingAutoSuggestList").on("blur", function(){
        $(this).hide();

    });
    $("li","#pricingAutoSuggestList").click(function(){
        ctry = $(this).text();
        key = $(this).attr("key");
        $("#pricingAutoSuggestInput").val(ctry);
        $("#pricingAutoSuggestList").hide();
        // Update Prices
        $("#priceInspect").fadeOut("fast").html(prices[key].inspectPrice).fadeIn("fast");
        $("#priceAudit").fadeOut("fast").html(prices[key].auditPrice).fadeIn("fast");
    });
</script>

<img src="{{assetsDomain}}/images/responsive/headerImages/pricing_[lg].jpg" alt="Quality Control Pricing | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />

{% endblock %}
