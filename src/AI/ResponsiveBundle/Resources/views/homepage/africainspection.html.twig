                            <br />
                            <br />
                            <div style="position: absolute; bottom: 0; width: calc(100% - 60px);">
                                <p style="text-align: center;"><a href="/quality-control-pricing">{{xml.section4.learnMore | trans}}</a></p>
                            </div>
