{% extends '::base.html.twig' %}
{%block title%}{{pageTitle}}{%endblock%}
{% block pageDescription %}{% if pageDesc is defined %}{{pageDesc}}{% endif %}{% endblock %}
{% block pageKeywords %}{% if pageKeywords is defined %}{{pageKeywords}}{% endif %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {%stylesheets filter="scss" '@AIResponsiveBundle/Resources/public/css/homepage.scss' %}
    <link rel="stylesheet" href="{{asset_url}}"/>
    {%endstylesheets%}
{% endblock %}

{% block body %}
    <script type="text/javascript">
        /* Preloading images for Mouseover */
        ico_Softlines = new Image();
        ico_Hardlines = new Image();
        ico_Food = new Image();
        ico_TechnicalParts = new Image();
        ico_Softlines.src = "{{assetsDomain}}/images/responsive/home_icons/v2/industry_softlines-2.gif";
        ico_Hardlines.src = "{{assetsDomain}}/images/responsive/home_icons/v2/industry_hardlines-2.gif";
        ico_Food.src = "{{assetsDomain}}/images/responsive/home_icons/v2/industry_food-2.gif";
        ico_TechnicalParts.src = "{{assetsDomain}}/images/responsive/home_icons/v2/industry_tech_parts-2.gif";
    </script>

    <!-- Section 1 - Video Header - START -->
    <div id="sectionOne" class="subsection">

        <div id="textOverlay">
            <div class="vcenter_parent" style="text-align:center;">
                <div id="homeGetStartedBox" class="vcenter">
                    <h1 style="color:white; {% if app.request.locale == "es" %}font-size:23px;{% endif %}">{% trans %}homepage_video_header{% endtrans %}</h1>
                    <p class="subheading" style="color:white; font-size:20px; {% if app.request.locale == "es" %} font-size:19px;{% endif %}">{% trans %}homepage_video_subheading{% endtrans %}</p>
                    <a href="/register" role="button" class="one-btn btn btn-primary btn-big" style="max-width:300px; margin-top:2.0em;">{% trans %}homepage_video_get_started_button{% endtrans %}</a>
                    <center><p style="color:white; margin-top:1.0em; font-size: 16px;" class="AI_text">{% trans %}homepage_video_create_free_account{% endtrans %}</p></center>
                </div>
            </div>
        </div>


        <div id="videoOverlayHomepage"></div>

        {#<canvas id="c" style="width:100%; height:100%; z-index:1;"></canvas>#}

        <video id="v" loop='' preload="auto" controls='' autoplay='' poster="{{assetsDomain}}/images/responsive/AI_bg_poster.png">
            <source src="{{assetsDomain}}/images/responsive/video/AI_bg.mp4" type="video/mp4"/>
            <source src="{{assetsDomain}}/images/responsive/video/AI_bg.webm" type="video/webm"/>
            <source src="{{assetsDomain}}/images/responsive/video/AI_bg.ogv" type="video/ogv"/>
        </video>

    </div>
    <!-- Section 1 - Video Header - END -->

    <!-- Section 2 - Demo - BEGIN -->
    <div id="sectionTwo" class="subsection">
        <div id="homeDemoWrapper" class="container wrapper">
            {#<div class="row">#}
                <div class="col-xs-12 vcenter_parent" style="text-align:center;">

                    <div class="homeDemoBox col-xs-6 col-sm-3">
                        <div class="image">
                            <img id="homeFeaturesIcon1" src="{{assetsDomain}}/images/responsive/home_icons/features_online.gif" style="height:60px; opacity:0;" />
                        </div>
                        <div class="title" style="font-weight:bold; margin-bottom:8px;">{% trans %}homepage_mobile_management_title{% endtrans %}</div>
                        <div class="content">{% trans %}homepage_mobile_management_text{% endtrans %}</div>
                    </div>

                    <div class="homeDemoBox col-xs-6 col-sm-3">
                        <div class="image">
                            <img id="homeFeaturesIcon2" src="{{assetsDomain}}/images/responsive/home_icons/features_turnaround.gif" style="height:60px; opacity:0;" />
                        </div>
                        <div class="title" style="font-weight:bold; margin-bottom:8px;">{% trans %}homepage_leading_turnaround_title{% endtrans %}</div>
                        <div class="content">{% trans %}homepage_leading_turnaround_text{% endtrans %}</div>
                    </div>

                    <div class="homeDemoBox col-xs-6 col-sm-3">
                        <div class="image">
                            <img id="homeFeaturesIcon3" src="{{assetsDomain}}/images/responsive/home_icons/features_SC_intelligence.gif" style="height:60px; opacity:0;" />
                        </div>
                        <div class="title" style="font-weight:bold; margin-bottom:8px;">{% trans %}homepage_chain_intelligence_title{% endtrans %}</div>
                        <div class="content">{% trans %}homepage_chain_intelligence_text{% endtrans %}</div>
                    </div>

                    <div class="homeDemoBox col-xs-6 col-sm-3">
                        <div class="image">
                            <img id="homeFeaturesIcon4" src="{{assetsDomain}}/images/responsive/home_icons/features_product_checklist.gif" style="height:60px; opacity:0;" />
                        </div>
                        <div class="title" style="font-weight:bold; margin-bottom:8px;">{% trans %}homepage_product_expertise_title{% endtrans %}</div>
                        <div class="content">{% trans %}homepage_product_expertise_text{% endtrans %}</div>
                    </div>

                </div>
            {#</div>#}

            {#<div class="row">#}
                <div class="col-xs-12 vcenter_parent" style="text-align:center;">

                    <div class="homeWatchDemoLinks">

                    {% if app.request.locale == "zh" %}
                        <a id="demodesktoplink" href="/popup?video=watchdemo&amp;lang=zh&amp;mobile=false&amp;TB_iframe=true&amp;ToDown=20&amp;height=440&amp;width=730&amp;modal=true" class="thickbox btn btn-afi btn-big one-btn" title="{% trans %}Watch a Demo{% endtrans %}">{% trans %}homepage_watch_a_demo{% endtrans %}</a>
                        <a id="demomobilelink" href="http://player.youku.com/player.php/sid/XNjU4OTcxNjM2/v.swf" class="btn btn-afi btn-big one-btn">{% trans %}homepage_watch_a_demo{% endtrans %}</a>
                    {% else %}
                        <a id="demodesktoplink" href="/popup?video=watchdemo&amp;lang=en&amp;mobile=false&amp;TB_iframe=true&amp;ToDown=20&amp;height=440&amp;width=730&amp;modal=true" class="thickbox btn btn-afi btn-big one-btn" title="{% trans %}Watch a Demo{% endtrans %}">{% trans %}homepage_watch_a_demo{% endtrans %}</a>
                        <a id="demomobilelink" href="https://www.youtube.com/v/xkgWD4KLccY?version=3%26autoplay=%26showinfo=0%26vq=hd720" class="btn btn-afi btn-big one-btn">{% trans %}homepage_watch_a_demo{% endtrans %}</a>
                    {% endif %}
                        <br />
                    </div>

                </div>
            {#</div>#}

            <div id="multiDeviceImage">
                <center>
                <div id="homepageTabletAnimationBox">
                    <img id="animateHomepageTablet" src="{{assetsDomain}}/images/responsive/homepageanimate/tablet.png" />
                    <img id="animateHomepageDesktop" src="{{assetsDomain}}/images/responsive/homepageanimate/desktop.png" />
                    <img id="animateHomepageMobile" src="{{assetsDomain}}/images/responsive/homepageanimate/mobile.png" />
                </div>
                </center>
            </div>

        </div>
    </div>
    <!-- Section 2 - Demo - END -->

    <!-- Section 3 - Services - BEGIN -->
    <div id="sectionThree" class="subsection">

        <h3 class="sectionHeader">{{xml.section3.title}}</h3>

        <div id="homeServicesText">
            <p style="max-width:860px; display:inline-block;">{% trans %}homepage_services_1{% endtrans %}</p>
            <p style="max-width:860px; display:inline-block;">{% trans %}homepage_services_2{% endtrans %}</p>
        </div><br />

        <div id="homeServicesRow" class="row">
            <div class="col-xs-12 vcenter_parent" style="text-align:center;">

                <div id="homeServiceBox1" class="serviceBox col-xs-6 col-sm-3" style="opacity:0;">
                    <div class="image">
                        <a href="/industry-softline"><img src="{{assetsDomain}}/images/responsive/home_icons/v2/industry_softlines-1.gif" border="0" onmouseover="this.src=ico_Softlines.src" onmouseout="this.src='{{assetsDomain}}/images/responsive/home_icons/v2/industry_softlines-1.gif'" /></a>
                    </div>
                    <div class="title"><p class="subheading" style="font-weight:bold;">{% trans %}Softlines{% endtrans %}</p></div>
                    <p style="text-align:center;"><a href="/industry-softline">{% trans %}Learn more{% endtrans %}</a></p>
                </div>

                <div id="homeServiceBox2" class="serviceBox col-xs-6 col-sm-3" style="opacity:0;">
                    <div class="image">
                        <a href="/industry-hardline"><img src="{{assetsDomain}}/images/responsive/home_icons/v2/industry_hardlines-1.gif" border="0" onmouseover="this.src=ico_Hardlines.src" onmouseout="this.src='{{assetsDomain}}/images/responsive/home_icons/v2/industry_hardlines-1.gif'" /></a>
                    </div>
                    <div class="title"><p class="subheading" style="font-weight:bold;">{% trans %}Hardlines{% endtrans %}</p></div>
                    <p style="text-align:center;"><a href="/industry-hardline">{% trans %}Learn more{% endtrans %}</a></p>
                </div>

                <div id="homeServiceBox3" class="serviceBox col-xs-6 col-sm-3" style="opacity:0;">
                    <div class="image">
                        <a href="/food-safety-testing"><img src="{{assetsDomain}}/images/responsive/home_icons/v2/industry_food-1.gif" border="0" onmouseover="this.src=ico_Food.src" onmouseout="this.src='{{assetsDomain}}/images/responsive/home_icons/v2/industry_food-1.gif'" /></a>
                    </div>
                    <div class="title"><p class="subheading" style="font-weight:bold;">{% trans %}Food{% endtrans %}</p></div>
                    <p style="text-align:center;"><a href="/food-safety-testing">{% trans %}Learn more{% endtrans %}</a></p>
                </div>

                <div id="homeServiceBox4" class="serviceBox col-xs-6 col-sm-3" style="opacity:0;">
                    <div class="image">
                        <a href="/industry-techparts"><img src="{{assetsDomain}}/images/responsive/home_icons/v2/industry_tech_parts-1.gif" border="0" onmouseover="this.src=ico_TechnicalParts.src" onmouseout="this.src='{{assetsDomain}}/images/responsive/home_icons/v2/industry_tech_parts-1.gif'" /></a>
                    </div>
                    <div class="title"><p class="subheading" style="font-weight:bold;">{% trans %}Technical Parts{% endtrans %}</p></div>
                    <p style="text-align:center;"><a href="/industry-techparts">{% trans %}Learn more{% endtrans %}</a></p>
                </div>

            </div>

        </div>

    </div>
    <!-- Section 3 - Services - END -->

    <!-- Section 4 - Publications - BEGIN -->
    <div id="sectionFour" class="subsection">
        
        <h3 class="sectionHeader">{% trans %}Latest Publications{% endtrans %}</h3>
        <div id="homePublicationsRow" class="row">
            <div class="homePublications" style="text-align:center;">

                <div class="ourLatestBox col-xs-12 col-sm-4">
                    <h3>{{contentCards.baro.title|trans}}</h3>
                    <a href="{{contentCards.baro.link}}"><img id="publicationImage0" border="0" src="{{contentCards.baro.thumb}}" /></a>
                    <div class="buttonbox"><a href="{{contentCards.baro.link}}" role="button"  class="btn btn-primary btn-big one-btn">{% trans %}View Now{% endtrans %}</a></div>
                </div>

                <div class="ourLatestBox col-xs-12 col-sm-4">
                    <h3>{{contentCards.insight.title|trans}}</h3>
                    <a href="{{contentCards.insight.link}}"><img id="publicationImage1" border="0" src="{{contentCards.insight.thumb}}" /></a>
                    <div class="buttonbox"><a href="{{contentCards.insight.link}}" role="button"  class="btn btn-primary btn-big one-btn">{% trans %}Download Now{% endtrans %}</a></div>
                </div>

                <div class="ourLatestBox col-xs-12 col-sm-4">
                    <h3>{% trans %}View a Sample Report for Your Industry{% endtrans %}</h3>
                    <a href="/samplereports"><img id="publicationImage2" border="0" src="https://s3.asiainspection.com/images/responsive/sample_report.png" /></a>
                    <div class="buttonbox"><a href="/samplereports" role="button"  class="btn btn-primary btn-big one-btn">{% trans %}Download Now{% endtrans %}</a></div>
                </div>

                <div style="clear:both;"></div>

            </div>
        </div>

    </div>
    <!-- Section 4 - Publications - END -->

    <!-- Section 5 - Assurance - BEGIN -->
    <div id="sectionFive" class="subsection">
        <div id="assuranceWrapper" class="container wrapper">

            <h2>{% trans %}homepage_assurance_title{% endtrans %}</h2>

            <div id="SliderAssurance">
                <ul style="padding-left:0px;">
                    <li class="assuranceSlide">
                        <p class="sliderText">
                            <img class="assurancePictogram" src="{{assetsDomain}}/images/responsive/home_icons/ico_globe.png" />
                            {% trans %}homepage_assurance_global{% endtrans %}
                        </p>
                    </li>
                    <li class="assuranceSlide">
                        <p class="sliderText">
                            <img class="assurancePictogram" src="{{assetsDomain}}/images/responsive/home_icons/ico_user.png" />
                            {% trans %}homepage_assurance_staff{% endtrans %}
                        </p>
                    </li>
                    <li class="assuranceSlide">
                        <p class="sliderText">
                            <img class="assurancePictogram" src="{{assetsDomain}}/images/responsive/home_icons/ico_factory.png" />
                            {% trans %}homepage_assurance_factories{% endtrans %}
                        </p>
                    </li>
                    <li class="assuranceSlide">
                        <p class="sliderText">
                            <img class="assurancePictogram" src="{{assetsDomain}}/images/responsive/home_icons/ico_magnifyingglassglobe.png" />
                            {% trans %}homepage_assurance_defects{% endtrans %}
                        </p>
                    </li>
                </ul>
            </div>

        </div>

    </div>
    <!-- Section 5 - Assurance - END -->


    <!-- Section 6 - Pricing - BEGIN -->
    <div id="sectionSix" class="subsection">
        
        <h2 class="sectionHeader" style="margin-bottom:30px;">{% trans %}Simple, All-Inclusive Pricing{% endtrans %}</h2>

        <div id="homePricingBoxWrapper" class="row">
            {% set i = 0 %}
            {% for box in xml.section4.box %}
                <div id="homePriceBox{{i}}" class="col-xs-offset-1 col-xs-10 col-sm-offset-0 col-sm-4 offer1">
                    <div class="text-center home-pricing-box pgrey">
                        <div class="homePriceContent" style="position: relative;">
                            <h5 style="margin:0px; font-size:1.1em;">{{box.title | trans}}</h5>
                            <div class="sep1"><div class="spriteSeparator_h1"></div></div>
                            {% if box.price == "${{priceAA}}" or box.price == "${{priceIA}}" %}<span>{% trans %}from{% endtrans %}</span>{% endif %}
                            <div class="h1">{{box.price | trans | replace({'{{priceIA}}': price_Inspect_Low,'{{priceAA}}': price_Audit_Low })}}</div> {% if box.price == "${{priceAA}}" or box.price == "${{priceIA}}" %}  {%else%}<br />{%endif%}
                            <p style="/*overflow: hidden;*/">{{box.content | trans}}</p>
                            <br />
                            <br />
                            <div style="position: absolute; bottom: 0; width: calc(100% - 60px);">
                                <p style="text-align: center;"><a href="/quality-control-pricing">{{xml.section4.learnMore | trans}}</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                {% set i = i + 1 %}
            {% endfor %}
        </div>
        <br />
        <a id="bookNowButton" href="/register" role="button"  class="btn btn-primary btn-big one-btn" style="width:345px;">{% trans %}Book Now{% endtrans %}</a>

    </div>
    <!-- Section 6 - Pricing - END -->

    <img src="{{assetsDomain}}/images/responsive/AI-on-multiple-devices.png" alt="Quality Control Online Platform | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/ico_management.png" alt="Supply Chain Management – Online & Mobile | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/ico_turnaround.png" alt="Inspections & Audits Within 48 Hours | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/ico_intelligence.png" alt="Supply Chain Intelligence | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/ico_expertise.png" alt="Product-Specific Inspection Expertise | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/2016Q2_barometer_homepage_thumb.png" alt="Supply Chain Industry News | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/white_paper.png" alt="Ethical Supply Chains Whitepaper | AsiaInspection" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/sample_report.png" alt="Inspection & Audit Sample Reports" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/home_icons/industry_softlines.gif" alt="Inspection & Audit Services: Softline Industry | AsiaInspecion" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/home_icons/industry_hardlines.gif" alt="Inspection & Audit Services: Hardline Industry | AsiaInspecion" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/home_icons/industry_tech_parts.gif" alt="Inspection & Audit Services: Technical Parts | AsiaInspecion" style="position:absolute; top:-5000px; z-index:-1000" />
    <img src="{{assetsDomain}}/images/responsive/home_icons/industry_food.gif" alt="Food Inspection & Audit Services | AsiaInspecion" style="position:absolute; top:-5000px; z-index:-1000" />

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- <script type="text/javascript" src="/js/FastBlur.js"></script> -->
    {% javascripts
        '@AIResponsiveBundle/Resources/public/js/homepage.js' 
        filter='?uglifyjs2' 
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {#<script type="text/javascript">#}
